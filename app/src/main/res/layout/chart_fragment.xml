<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chart_fragment"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4">

        <ProgressBar
            android:id="@+id/unstarted_items"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:indeterminate="false"
            android:progressDrawable="@drawable/unstarted" />

        <TextView
            android:id="@+id/tv_unstarted_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/primary_gray"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4">

        <ProgressBar
            android:id="@+id/started_items"
            android:progressDrawable="@drawable/started"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:indeterminate="false"
            />

        <TextView
            android:id="@+id/started_items_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/primary_gray"
            android:textSize="14sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/done_items"
            android:progressDrawable="@drawable/done"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:indeterminate="false"
            />

        <TextView
            android:id="@+id/tv_done_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/primary_gray"
            android:textSize="14sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4">

        <ProgressBar
            android:id="@+id/my_items"
            android:progressDrawable="@drawable/my_items"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:indeterminate="false"
            />

        <TextView
            android:id="@+id/my_items_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/primary_gray"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>