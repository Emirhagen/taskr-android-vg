<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.rejjd.taskmanager.SearchActivity">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/et_search_value"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Enter title here!"
            android:textSize="12sp"
            android:layout_toLeftOf="@+id/search_btn_search"
            android:layout_marginLeft="5dp"/>
        <Button
            android:id="@+id/search_btn_search"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Search"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>


    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/workitem_list_search_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="se.rejjd.taskmanager.MainActivity"/>



</android.support.constraint.ConstraintLayout>
